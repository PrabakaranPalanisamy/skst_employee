<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:padding="4dp"
    tools:context="com.mazenet.mzs119.skst.AddCustomer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edt_ac_b5ranchname"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/rectboxx"
                android:hint="Branch name"
                android:inputType="text"
                android:minHeight="40dp"
                android:singleLine="true" />

        </LinearLayout>

        <ListView
            android:id="@+id/list_ac_branchname"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:background="@drawable/rectboxx"
            android:divider="@null" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.mazenet.mzs119.skst.Utils.NDSpinner
                android:id="@+id/spn_ac_salute"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/rectboxx"
                android:minHeight="40dp" />

            <EditText
                android:id="@+id/edt_ac_fname"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:background="@drawable/rectboxx"
                android:digits="qwertzuiopasdfghjklyxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
                android:hint="First name"
                android:inputType="textPersonName"
                android:minHeight="40dp"
                android:singleLine="true" />


            <EditText
                android:id="@+id/edt_ac_initial"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/rectboxx"
                android:digits="qwertzuiopasdfghjklyxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
                android:hint="Initial"
                android:inputType="textPersonName"
                android:minHeight="40dp"
                android:singleLine="true" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <EditText
                android:id="@+id/edt_ac_age"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/rectboxx"
                android:editable="false"
                android:focusable="false"
                android:hint="Date of Birth"
                android:minHeight="40dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/rectboxx"
            android:gravity="center"
            android:minHeight="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:text="Gender"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/eg_ac_gendergroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_ac_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:buttonTint="@color/colorPrimary"
                    android:text="Male" />

                <RadioButton
                    android:id="@+id/rb_ac_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:buttonTint="@color/colorPrimary"
                    android:text="Female" />

                <RadioButton
                    android:id="@+id/rb_ac_shemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:buttonTint="@color/colorPrimary"
                    android:text="Others" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">


            <EditText
                android:id="@+id/edt_ac_mobileno"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/rectboxx"
                android:hint="Mobile Number"
                android:inputType="phone"
                android:maxLength="12"
                android:minHeight="40dp"
                android:singleLine="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">


            <EditText
                android:id="@+id/edt_ac_altermobile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/rectboxx"
                android:hint="Alternative Mobile Number"
                android:inputType="phone"
                android:maxLength="12"
                android:minHeight="40dp"
                android:singleLine="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="5dp">


            <EditText
                android:id="@+id/edt_ac_email"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/rectboxx"
                android:hint="Email ID"
                android:inputType="textEmailAddress"
                android:minHeight="40dp"
                android:singleLine="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="5dp">


            <EditText
                android:id="@+id/edt_ac_aadhar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/rectboxx"
                android:hint="Aadhar Number"
                android:inputType="number"
                android:maxLength="12"
                android:minHeight="40dp"
                android:singleLine="true" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">


            <EditText
                android:id="@+id/edt_ac_pan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/rectboxx"
                android:hint="PAN Number"
                android:inputType="text"
                android:minHeight="40dp"
                android:singleLine="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">


            <EditText
                android:id="@+id/edt_ac_ration"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/rectboxx"
                android:hint="Ration card Number"
                android:inputType="text"
                android:minHeight="40dp"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="5dp">


            <EditText
                android:id="@+id/edt_ac_doj"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/rectboxx"
                android:editable="false"
                android:focusable="false"
                android:hint="Date of Joining"
                android:inputType="number"
                android:minHeight="40dp"
                android:singleLine="true"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:background="@drawable/rectboxx"
            android:minHeight="40dp">

            <RadioGroup
                android:id="@+id/rg_ac_relation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <RadioButton
                    android:id="@+id/rb_ac_father"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:buttonTint="@color/colorPrimary"
                    android:text="Father's Name" />

                <RadioButton
                    android:id="@+id/rb_ac_spouse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:buttonTint="@color/colorPrimary"
                    android:text="Spouse's Name" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fatherlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <EditText
                android:id="@+id/edt_ac_fathername"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/rectboxx"
                android:hint="Father's name"
                android:inputType="textPersonName"
                android:minHeight="40dp"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/spouselay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">


            <EditText
                android:id="@+id/edt_ac_spousename"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/rectboxx"
                android:hint="Spouse's name"
                android:inputType="textPersonName"
                android:minHeight="40dp"
                android:singleLine="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">


            <EditText
                android:id="@+id/edt_ac_addressCommunication"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/rectboxx"
                android:hint="Address of Communication"
                android:inputType="textPostalAddress"
                android:minHeight="40dp"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">


            <EditText
                android:id="@+id/edt_ac_communicationcity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/rectboxx"
                android:hint="City"
                android:inputType="textPersonName"
                android:minHeight="40dp"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">


            <EditText
                android:id="@+id/edt_ac_communicationdistrict"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/rectboxx"
                android:hint="District"
                android:inputType="textPersonName"
                android:minHeight="40dp"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">


            <EditText
                android:id="@+id/edt_ac_communicationstate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/rectboxx"
                android:hint="State"
                android:inputType="textPersonName"
                android:minHeight="40dp"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">


            <EditText
                android:id="@+id/edt_ac_communicationpinno"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/rectboxx"
                android:hint="PIN Code"
                android:inputType="number"
                android:minHeight="40dp"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <CheckBox
                android:id="@+id/cb_ac_sameaddress"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:buttonTint="@color/colorPrimary"
                android:text="if permanent address(same as above)" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">


            <EditText
                android:id="@+id/edt_ac_present_address"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/rectboxx"
                android:hint="Permanent Address"
                android:inputType="textPostalAddress"
                android:minHeight="40dp"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">


            <EditText
                android:id="@+id/edt_ac_presentcity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/rectboxx"
                android:hint="City"
                android:inputType="textPersonName"
                android:minHeight="40dp"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">


            <EditText
                android:id="@+id/edt_ac_presentdistrict"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/rectboxx"
                android:hint="District"
                android:inputType="textPersonName"
                android:minHeight="40dp"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">


            <EditText
                android:id="@+id/edt_ac_presentstate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/rectboxx"
                android:hint="State"
                android:inputType="textPersonName"
                android:minHeight="40dp"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">


            <EditText
                android:id="@+id/edt_ac_presentpinno"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/rectboxx"
                android:hint="PIN Code"
                android:inputType="number"
                android:minHeight="40dp"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:background="@drawable/rectboxx"
            android:minHeight="40dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Referer"
                android:textSize="17sp" />

            <RadioGroup
                android:id="@+id/rg_ac_refertype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_ac_customerRefer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:buttonTint="@color/colorPrimary"
                    android:text="Customer" />

                <RadioButton
                    android:id="@+id/rb_ac_employeeRefer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:buttonTint="@color/colorPrimary"
                    android:text="Employee" />

                <RadioButton
                    android:id="@+id/rb_ac_selfjoin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:buttonTint="@color/colorPrimary"
                    android:text="Self" />

            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">


            <EditText
                android:id="@+id/edt_ac_refercustomer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/rectboxx"
                android:hint="Customer Name"
                android:inputType="text"
                android:minHeight="40dp"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">


            <EditText
                android:id="@+id/edt_ac_referemployee"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/rectboxx"
                android:hint="Employee Name"
                android:inputType="text"
                android:minHeight="40dp"
                android:singleLine="true" />
        </LinearLayout>

        <ListView
            android:id="@+id/list_ac_referername"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:background="@drawable/rectboxx"
            android:divider="@android:color/transparent"
            android:visibility="gone" />

        <ListView
            android:id="@+id/list_ac_referemployee"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:background="@drawable/rectboxx"
            android:divider="@android:color/transparent"
            android:minHeight="40dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">


            <EditText
                android:id="@+id/edt_ac_pfnumber"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/rectboxx"
                android:hint="PF Number"
                android:inputType="text"
                android:minHeight="40dp"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">


            <EditText
                android:id="@+id/edt_ac_retirementdate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/rectboxx"
                android:editable="false"
                android:focusable="false"
                android:hint="Retirement Date"
                android:inputType="number"
                android:minHeight="40dp"
                android:singleLine="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">


            <EditText
                android:id="@+id/edt_ac_collectagent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/rectboxx"
                android:hint="Collection Agent"
                android:inputType="text"
                android:minHeight="40dp"
                android:singleLine="true" />

        </LinearLayout>

        <ListView
            android:id="@+id/list_ac_collectagent"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:background="@drawable/rectboxx"
            android:divider="@android:color/transparent"
            android:minHeight="40dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">


            <EditText
                android:id="@+id/edt_ac_occupation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/rectboxx"
                android:hint="Occupation"
                android:inputType="textPersonName"
                android:minHeight="40dp"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/rectboxx"
            android:minHeight="40dp">

            <com.mazenet.mzs119.skst.Utils.NDSpinner
                android:id="@+id/spn_ac_sourceOfFunds"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">


            <EditText
                android:id="@+id/edt_ac_netsalary"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/rectboxx"
                android:hint="Net Salary"
                android:inputType="number"
                android:minHeight="40dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_ac_submit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:buttonTint="@color/primary"
                android:text="Submit" />

            <Button
                android:id="@+id/btn_ac_reset"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:buttonTint="@color/primary"
                android:text="Reset" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
